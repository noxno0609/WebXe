@model WebXe.ViewModels.CarViewModels 
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddCar", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="admin-content">
        <h2>Thêm Xe</h2>
        <form class="#">
            <div class="form-group">
                <label>Tên Xe:</label>
                @Html.TextBoxFor(m=> m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Giá:</label>
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Giá Thị Trường:</label>
                @Html.TextBoxFor(m => m.PricePublic, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Nội Dung:</label>
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Loại Xe:</label>
                @Html.DropDownListFor(m => m.CarType,
                    new SelectList(Model.CarTypies, "Id", "Name"), "", new { @class ="form-control" })
                @Html.ValidationMessageFor(m=>m.CarTypies)
            </div>

            <div class="form-group">
                <label>Hình Ảnh:</label>
                @Html.TextBoxFor(m => m.Images, "", new { @type = "file", @multiple = "multiple", @accept = "image/*" })
                @Html.ValidationMessageFor(m => m.Images, "", new { @class = "text-danger" })
            </div>
        </form>

        <div class="form-actions no-color">
            <input type="submit" formaction="AddCar" formmethod="post" value="Thêm" class="btn btn-primary" />
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
}